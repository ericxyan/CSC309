<!DOCTYPE html>
<html>
	<head>
		<title>Good Team</title>
		<link rel='stylesheet' href='/views/stylesheets/style.css' />
		<!-- AngularJS -->
		<script src="//ajax.googleapis.com/ajax/libs/angularjs/1.3.13/angular.js"></script>
		<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.0/angular-route.min.js"></script>
		<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.0/angular-cookies.js"></script>
		<script src="/views/javascripts/bower_components/valdr/valdr.min.js"></script>
		<script src="/views/javascripts/bower_components/valdr/valdr-message.min.js"></script>

		<!-- Bootstrap: Latest compiled and minified CSS -->
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
		<!-- Bootstrap: Optional theme -->
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap-theme.min.css">
		<script src="//code.jquery.com/jquery-1.11.3.min.js"></script>
		<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
		<script src="//angular-ui.github.io/bootstrap/ui-bootstrap-tpls-0.13.0.js"></script>
		<!-- AngularJS controllers -->
		<script src="/views/javascripts/ngApp.js"></script>
		<script src="/views/javascripts/controllers.js"></script>
		<script src="/views/javascripts/config.js"></script>
		<!-- Font Awesome -->
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
	</head>
	<body  ng-app="goodteam">
		<div class="container">
			<!-- navbar -->
			<header class="navbar navbar-default navbar-fixed-top" ng-controller="navCtrl">
				<div class="container">
					<div class="navbar-header">
						<!-- collapse menu icon -->
						<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						</button>
						<a href="#/" class="navbar-brand col-md-2">GoodTeam</a>
					</div>
					<div class="navbar-collapse collapse">
						<!-- Home -->
						<div class="navbar-btn navbar-left col-md-1">
							<a href="#/"><button class="btn btn-info"><span class="glyphicon glyphicon-home"></span>Home</button></a>
						</div>
						<!-- Sing in -->
						<div class="navbar-btn navbar-right col-md-1" ng-if="!authenticated">
							<button class="btn btn-default" ng-click="openSignIn('sm')" >Sign in</button>
						</div>
						<!-- Sign up -->
						<div class="navbar-btn navbar-right col-md-1" ng-if="!authenticated">
							<button class="btn btn-success" ng-click="openSignUp()">Sign up</button>
						</div>
						<!-- Google -->
						<div class="navbar-btn navbar-right col-md-1" id="customBtn" ng-if="!authenticated">
							
							<a href="/auth/google" style="color: white">
								<span class="icon"></span>
								<span class="buttonText">Google</span></a>
							</div>
							<div class="navbar-btn navbar-right col-md-1" ng-if="authenticated">
								<button class="btn btn-default" ng-click="signout()" >Logout</button>
							</div>
							<div class="navbar-btn navbar-right col-md-2" ng-if="authenticated">
								Signed in as <a href="#/admin/user/{{current_user}}"><button class="btn btn-success">{{current_user}}</button></a>
							</div>
							
							<!-- Search -->
							<form class="navbar-form navbar-right col-md-3" role="search">
								<div class="input-group">
									<input type="text" ng-model="searchKey" class="search-query form-control" placeholder="Search project or user" />
									<span class="input-group-btn">
										<button class="btn btn-primary" type="button" ng-click="searchLink()">
										<span class=" glyphicon glyphicon-search"></span>
										</button>
									</span>
								</div>
							</form>
						</div>
					</div>
				</header>
				<!-- Content -->
				<div class="row content">
					<div ng-view></div>
				</div>
			</div>
		</div>
	</body>
</html>